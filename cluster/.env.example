# Cluster Agent Port
CLUSTER_PORT=4000

# Discovery Port (UDP broadcast)
DISCOVERY_PORT=4001

# Master Server (optional, leave empty for auto-discovery)
MASTER_SERVER=

# Shared Storage Path (Network Mount - MUST be accessible from all clusters)
SHARED_STORAGE_PATH=Z:/mnt
JOBS_BASE_PATH=Z:/mnt/runners/jobs

# Task Execution Settings
MAX_CONCURRENT_TASKS=4
TASK_TIMEOUT=300000

# Resource Limits
MAX_CPU_PERCENT=80
MAX_MEMORY_PERCENT=80

# Security
CLUSTER_SECRET=your-cluster-secret-key
